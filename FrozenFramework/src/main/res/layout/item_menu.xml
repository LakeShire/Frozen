<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_menu_height" >

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/item_menu_pic_width"
        android:layout_height="@dimen/item_menu_pic_height"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/item_menu_pic_margin_vertical_large"
        android:layout_marginEnd="@dimen/item_menu_pic_margin_right"
        android:layout_marginLeft="@dimen/item_menu_pic_margin_left"
        android:layout_marginRight="@dimen/item_menu_pic_margin_right"
        android:layout_marginStart="@dimen/item_menu_pic_margin_left"
        android:layout_marginTop="@dimen/item_menu_pic_margin_vertical_large"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/menu_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_pic"
        android:layout_toRightOf="@id/iv_pic"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"
        android:layout_alignLeft="@id/tv_title"/>

    <ImageView
        android:id="@+id/iv_new"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        android:src="@drawable/dot_new"
        android:layout_toLeftOf="@+id/tv_detail"/>

    <TextView
        android:id="@+id/tv_detail"
        style="@style/menu_btn_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:visibility="gone"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/item_menu_pic_margin_vertical_large"
        android:layout_marginEnd="@dimen/item_menu_pic_margin_right"
        android:layout_marginLeft="@dimen/item_menu_pic_margin_left"
        android:layout_marginRight="@dimen/item_menu_pic_margin_right"
        android:layout_marginStart="@dimen/item_menu_pic_margin_left"
        android:layout_marginTop="@dimen/item_menu_pic_margin_vertical_large"/>
</RelativeLayout>